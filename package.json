{
  "name": "@slatedocs/slate",
  "version": "3.0.0",
  "description": "Beautiful API Documentation",
  "scripts": {
    "postinstall": "node setup",
    "lint": "npx eslint .*.js source/*.js",
    "lint.app": "npx eslint source/slate/js/app/*.js",
    "lint.ejs": "npx ejs-lint source/_includes/slate.ejs",
    "test": "npx eleventy --input=source/*.md",
    "build.sass": "npx sass --update --style compressed --no-source-map source/slate/css",
    "build.11t": "npx eleventy --input=source/*.md",
    "build": "npm run build.sass && npm run build.11t",
    "debug": "DEBUG=Eleventy* npx eleventy --dryrun --input=source/*.md",
    "serve": "npm run build.sass && npx eleventy --input=source/*.md --serve --port=4567"
  },
  "keywords": [
    "slate",
    "api",
    "documentation",
    "ssg"
  ],
  "author": "Robert Lord",
  "contributors": [
    "Matthew Peveler",
    "Mike Ralphson"
  ],
  "license": "Apache-2.0",
  "private": true,
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "cheerio": "^1.0.0-rc.3",
    "imagesloaded": "^4.1.4",
    "jquery": "^3.5.1",
    "lunr": "^2.3.8",
    "markdown-it": "^11.0.0",
    "markdown-it-anchor": "^5.3.0",
    "sass": "^1.26.9"
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slatedocs/slate3.git"
  },
  "bugs": {
    "url": "https://github.com/slatedocs/slate3/issues"
  },
  "homepage": "https://github.com/slatedocs/slate3#readme"
}
